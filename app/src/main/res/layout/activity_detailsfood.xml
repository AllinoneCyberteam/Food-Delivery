<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DetailsfoodActivity">
    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="400dp">
        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/logo"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_below="@+id/ll"
        android:background="@drawable/rl_b"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="60dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="26dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:text="Food Name"
            android:textColor="@color/blackColor"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:text="Description"
            android:layout_below="@id/textView1"
            android:layout_marginStart="26dp"/>


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="132dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/text4"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="19dp"
            android:textSize="20dp"
            android:text="Amount"
            android:textColor="@color/blackColor"
            android:textStyle="bold" />


        <SlidingDrawer
            android:id="@+id/SlidingDrawer"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:content="@+id/contentLayout"
            android:handle="@+id/slideButton"
            android:padding="10dip">

            <Button
                android:id="@+id/slideButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@color/redColor"
                android:text="add"
                android:textColor="#ffffff" />

            <!-- Content Layout -->
            <RelativeLayout
                android:id="@+id/contentLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFCC"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dip">

                <TextView
                    android:id="@+id/text"
                    android:layout_width="fill_parent"
                    android:layout_height="31dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="2dp"
                    android:text="Enter the Number of Items:"
                    android:textColor="#ffffff" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/add_cart"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="103dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/inc"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:text="+"
                        android:textColor="@color/blackColor" />

                    <TextView
                        android:id="@+id/number_of_items"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/blackColor" />

                    <Button
                        android:id="@+id/dec"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:onClick="decrement"
                        android:text="-" />
                </LinearLayout>


                <TextView
                    android:id="@+id/total_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/add_cart"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="19dp"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <Button

                    android:id="@+id/add_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="Add to Cart" />

            </RelativeLayout>
        </SlidingDrawer>
    </RelativeLayout>

</RelativeLayout>